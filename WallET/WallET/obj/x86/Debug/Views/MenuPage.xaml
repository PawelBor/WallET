<Page
    x:Class="WallET.Views.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WallET.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <StackPanel Background="#E1E7EB" Grid.Row="0" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Uid="userBalanceTB" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                <TextBlock x:ConnectionId='11' x:Name="balanceBox" Margin="25,0,0,0" HorizontalAlignment="Center"  Text="Balance" FontSize="35" VerticalAlignment="Center"  Foreground="Green"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:Uid="currentBalanceTB" Text="" VerticalAlignment="Center" ></TextBlock>
                <TextBlock x:ConnectionId='10' x:Name="curentBalanceBox" Margin="10,0,0,0" Text="CurBalance" FontSize="25"  HorizontalAlignment="Center" Foreground="Red"></TextBlock>
            </StackPanel>
        </StackPanel>
        
        <Pivot x:ConnectionId='1' Grid.Row="1" x:Name="rootPivot" Background="#C1CDCD" Title="WallET">
            
            <PivotItem x:Uid="productsPI" Header="">
                <ScrollViewer Grid.Row="1" Grid.Column="0" >
                    <StackPanel HorizontalAlignment="Stretch" Width="Auto" Height="Auto" Padding="5">
                   
                        <StackPanel Grid.Column="1" Grid.Row="1">
                            <TextBlock x:Uid="productBlock" Text="" FontSize="20"></TextBlock>
                            <TextBox x:ConnectionId='4' x:Name="productTextBox" Padding="10" Margin="0, 5, 0, 0" />

                            <TextBlock x:Uid="quantityBlock" Text="" FontSize="20"></TextBlock>
                            <TextBox x:ConnectionId='5' x:Name="quantityTextBox" Padding="10" Margin="0, 5, 0, 0" />

                            <TextBlock x:Uid="priceBlock" Text="" FontSize="20"></TextBlock>
                            <TextBox x:ConnectionId='6' x:Name="priceTextBox" Padding="10" Margin="0, 5, 0, 0" />

                            <ListBox x:ConnectionId='7' x:Name="fetchData" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       Width="Auto" Height="150" ItemsSource="{Binding}" Margin="0 10 0 0"
                                                                                     >
                            </ListBox>
                            <TextBlock x:ConnectionId='8' x:Name="listBoxTotalCost"  HorizontalAlignment="Left" Width="Auto" Margin="0 10 0 0" 
                           Height="Auto" FontFamily="Century Gothic" FontStyle="Italic" Foreground="Red" />
                            <TextBlock x:ConnectionId='9' x:Name="listBoxTotalItemCount" HorizontalAlignment="Left" Width="Auto"
                           Height="Auto" FontFamily="Century Gothic" FontStyle="Italic" Foreground="Blue" />
                        </StackPanel>
                   
                </StackPanel>
                </ScrollViewer>

            </PivotItem>
            
            <PivotItem x:Uid="setBalancePI" Header="">
                <StackPanel>
                    <TextBox x:ConnectionId='2' PlaceholderText="Enter Your Balance..." x:Name="txtBalanceInput" FontSize="30">
                    </TextBox>
                    <Button x:ConnectionId='3' x:Uid="setBalanceBTN" Content="" Name="btnSetBalance"                            ></Button>
                </StackPanel>
            </PivotItem>
            
        </Pivot>

    </Grid>
    <Page.BottomAppBar>
        <AppBar IsOpen="True" IsSticky="True">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="Auto">
                <AppBarButton x:ConnectionId='12' x:Name="Show"  Icon="Zoom"                      />
                <AppBarButton x:ConnectionId='13' x:Name="Add"  Icon="Add"                     />
                <AppBarButton x:ConnectionId='14' x:Name="Delete"  IsEnabled="False" Icon="Remove"                        />
                <AppBarButton x:ConnectionId='15' x:Name="DeleteAll"  IsEnabled="False" Icon="Delete"                           />
               
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
</Page>

