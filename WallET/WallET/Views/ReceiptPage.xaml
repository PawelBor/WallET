<Page
    x:Class="WallET.Views.ReceiptPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WallET.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#DAD8DA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel BorderBrush="Black" BorderThickness="3" >
                <StackPanel Background="Black">
                    <TextBlock x:Uid="savedReceiptTitleUID" x:Name="savedReceiptDisplay" FontSize="25" FontFamily="Times New Roman" FontWeight="Bold" Foreground="WhiteSmoke" Text="" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
                <TextBlock x:Name="receiptDisplay" HorizontalAlignment="Center" Margin="30,20,30,20"  />
                <Button x:Uid="btnClearReceiptUID" x:Name="btnClear" Foreground="White" Background="Black" Content="" FontFamily="Times New Roman" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" Tapped="btnClear_Tapped" />
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
